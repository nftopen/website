    const defaultConfig = {
      company_name: "Axia Flow",
      tagline: "Certified Plumbing Experts",
      hero_title: "Professional Plumbing Services in Nottingham and Midlands",
      hero_subtitle: "Available 24/7 for Emergency Repairs and Installations",
      cta_button: "Get a Free Quote",
      services_title: "Our Services",
      contact_title: "Contact Us Today",
      phone_number: "07939 904220",
      email_address: "info@axiaflow.com",
      background_color: "#f8fafc",
      primary_color: "#0d9488",
      secondary_color: "#ffffff",
      text_color: "#1a1a1a",
      accent_color: "#14b8a6",
